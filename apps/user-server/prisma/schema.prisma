datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Follow {
  createdAt  DateTime  @default(now())
  followedAt DateTime?
  follower   String?
  following  String?
  id         String    @id @default(cuid())
  updatedAt  DateTime  @updatedAt
}

model Otp {
  createdAt      DateTime  @default(now())
  expirationTime DateTime?
  id             String    @id @default(cuid())
  otpCode        Int?
  updatedAt      DateTime  @updatedAt
  user           User?     @relation(fields: [userId], references: [id])
  userId         String?
}

model ProfilePicture {
  createdAt  DateTime  @default(now())
  id         String    @id @default(cuid())
  imageUrl   Json?
  updatedAt  DateTime  @updatedAt
  uploadedAt DateTime?
  users      User[]
}

model User {
  createdAt        DateTime        @default(now())
  email            String?         @unique
  firstName        String?
  following        String?
  id               String          @id @default(cuid())
  lastName         String?
  mobileNumber     String?
  otps             Otp[]
  password         String
  profilePicture   ProfilePicture? @relation(fields: [profilePictureId], references: [id])
  profilePictureId String?
  roles            Json
  updatedAt        DateTime        @updatedAt
  username         String          @unique
}
